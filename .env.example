# ==============================================================================
# FastAPI Scraper Server - Environment Variables
# Multi-Bot Telegram Support (30+ bots)
# Copy this file to .env and update values
# ==============================================================================

# Application Settings
PROJECT_NAME="FastAPI Scraper Server"
PROJECT_DESCRIPTION="Production-grade FastAPI server with Selenium scraping and multi-bot Telegram support"
VERSION="1.0.0"

# Environment: development, staging, production
ENVIRONMENT=development
DEBUG=true

# Server Settings
HOST=0.0.0.0
PORT=3000
WORKERS=4

# API Documentation (set to false in production if you want to hide docs)
ENABLE_DOCS=true

# ==============================================================================
# SECURITY SETTINGS - IMPORTANT!
# ==============================================================================

# API Key Encryption Secret
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
# IMPORTANT: Keep this secret and never commit to version control!
API_KEY_SECRET=your-super-secret-key-change-this-in-production

# Header name for API key
API_KEY_HEADER_NAME=X-API-Key

# Valid API Keys (comma-separated)
# In production, use encrypted keys
VALID_API_KEYS=dev-key-123,test-key-456

# ==============================================================================
# DEFAULT TELEGRAM BOT (Optional - bots can also be added via API)
# ==============================================================================

# If you set these, a default bot will be created on startup
# Get your bot token from @BotFather on Telegram

# Default bot token (optional - you can add bots via API instead)
TELEGRAM_BOT_TOKEN=

# Default channel ID to send results
# For public channels: @channelname
# For private channels: -1001234567890
TELEGRAM_CHANNEL_ID=

# Optional: Direct chat ID for personal messages
TELEGRAM_CHAT_ID=

# Message formatting: HTML or Markdown
TELEGRAM_PARSE_MODE=HTML

# ==============================================================================
# SELENIUM CONFIGURATION
# ==============================================================================

# Run Chrome in headless mode (no GUI) - required for servers
SELENIUM_HEADLESS=true

# Timeouts in seconds
SELENIUM_TIMEOUT=30
SELENIUM_PAGE_LOAD_TIMEOUT=60
SELENIUM_IMPLICIT_WAIT=10

# Chrome paths (auto-detected in Docker)
# CHROME_BINARY_PATH=/usr/bin/chromium
# CHROMEDRIVER_PATH=/usr/bin/chromedriver

# User agent string
SELENIUM_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36

# Directory for screenshots
SCREENSHOTS_DIR=/app/screenshots

# ==============================================================================
# CORS Settings
# ==============================================================================

# Allowed origins (comma-separated or JSON list)
ALLOWED_ORIGINS='["*"]'

# Allowed hosts (comma-separated or JSON list)
ALLOWED_HOSTS='["*"]'

# ==============================================================================
# Rate Limiting
# ==============================================================================

RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# ==============================================================================
# Database (for future use)
# ==============================================================================

DATABASE_URL=sqlite:///./data.db

# ==============================================================================
# Redis (for caching/rate limiting)
# ==============================================================================

REDIS_URL=redis://localhost:6379/0
